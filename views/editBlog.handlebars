<div class="card">
  <h2 class="card-header">Edit Blog</h2>
  <form class="card-body" id="edit-post-form">
    <div>
      <label class="form-label">Name:</label>
      <input
        class="form-input"
        type="text"
        name="post-name"
        value="{{post.postName}}"
      />
    </div>

    <div>
      <label class="form-label">Content:</label>
      <textarea
        class="form-textarea form-input"
        name="post-body"
        data-number="8"
      >{{post.postContent}}</textarea>
    </div>

    <button class="btn btn-primary" type="submit">EDIT</button>
    <input type="hidden" name="post-id" value="{{post.id}}" />
  </form>
  <div class="card-body">
    <button class="btn btn-primary" type="click" id="delete-btn">DELETE</button>
  </div>
</div>
<script src="/js/edit.js"></script>