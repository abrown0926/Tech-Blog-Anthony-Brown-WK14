<div class="card">
  <div class="card-header  flex-row justify-space-between">
    <h2>
      <a href="/post/{{post.id}}">
        <div class="col-8">{{post.postName}}</div>
      </a>
    </h2>
    <div class="col-3">posted by {{post.user.username}} on {{format_date post.dateCreated}}
    </div>
  </div>  
  <p class="card-body">
   {{post.blogContent}}
  </p>
</div>
<input type="hidden" name="post-id" value="{{post.id}}"/>
<div class="card">
  <div class="card-header"></div>
  <form class="card-body" id="new-blog-form">
    
    <p class="form-label">Blog:</p>
    <textarea class="form-input" id="blog-body" name="blog-body"></textarea>
    <button type="submit" class="btn btn-primary">Submit:</button>
  </form>
{{> blog post.blog}}
</div>
<script src="/js/blog.js"></script>